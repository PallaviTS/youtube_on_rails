%div.container
  %h1="New video"
  = form_for @video do |form|
    = render 'shared/errors', object: @video
    .form-group
      = form.label :link
      = form.text_field :link, class: 'form-control', require: true
      %span.help-block= "A link to the video on YouTube."
    = form.submit class: 'btn btn-primary'


